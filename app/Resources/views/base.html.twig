<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap-reboot.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap-grid.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-success fixed-top">
        <a class="navbar-brand" href="{{ path('homepage') }}">Doggy Boutique</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a href="{{ path('homepage') }}" class="nav-link">Магазин</a>
                </li>
                {% if (app.user) and (app.user.isAdmin) %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('add_product') }}">Добави продукт</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('products_list') }}">Виж всички</a>
                </li>
                {% endif %}
            </ul>
            <ul class="navbar-nav ml-auto">
                {% if app.user %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('user_profile') }}">Моят профил</a>
                </li>
                <li>
                    <a class="nav-link" href="{{ path('security_logout') }}">Изход</a>
                </li>
                {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('security_login') }}">Влез</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('user_register') }}">Регистрирай се</a>
                </li>
                {% endif %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('shopping_cart') }}">Количка</a>
                </li>
            </ul>
        </div>
    </nav>
        <div class="container">


        {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
            <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
            <script src="{{ asset('js/script.js') }}"></script>
        {% endblock %}
    </body>
</html>
