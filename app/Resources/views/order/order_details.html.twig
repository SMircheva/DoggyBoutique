{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form, {'attr':{'class':'mt-3 border-2 border-secondary pt-3 pb-3 rounded'}}) }}

    <div class="form-group row">
        <div class="col-lg-2 offset-lg-2 text-right">
            {{ form_label(form.streetAddress, null,
                {'label': 'Пълен адрес:'}
            ) }}
        </div>
        <div class="col-lg-5">
            {{ form_widget(form.streetAddress,
                {'attr': {'class': 'form-control'}}
            )}}
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-2 offset-lg-2 text-right">
            {{ form_label(form.city, null,
                {'label': 'Град:'}
            ) }}
        </div>
        <div class="col-lg-5">
            {{ form_widget(form.city,
                {'attr': {'class': 'form-control'}}
            )}}
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-2 offset-lg-2 text-right">
            {{ form_label(form.postcode, null,
                {'label': 'Пощенски код:'}
            ) }}
        </div>
        <div class="col-lg-5">
            {{ form_widget(form.postcode,
                {'attr': {'class': 'form-control'}}
            )}}
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-2 offset-lg-2 text-right">
            {{ form_label(form.contactPhone, null,
                {'label': 'Телефон за контакти:'}
            ) }}
        </div>
        <div class="col-lg-5">
            {{ form_widget(form.contactPhone,
                {'attr': {'class': 'form-control'}}
            )}}
        </div>
    </div>
    <div class="text-center">
        {{ form_row(form.submit, {
            'label': 'Поръчай',
            'attr':{'class':'btn btn-outline-secondary btn-lg pr-5 pl-5'}
        }) }}
    </div>
    {{ form_end(form) }}

{% endblock %}