{% extends 'base.html.twig' %}

{% block body %}
    <form action="{{ path('security_login') }}" method="post" class="text-white col-lg-6 offset-lg-3 bg-secondary mt-4 rounded p-4">
        <div class="form-group">
            <label for="product_name" class="col-lg-8 offset-lg-2">
                Име на продукта:
                <input type="text" class="form-control mt-2" name="product_name" placeholder="">
            </label>
        </div>
        <div class="form-group">
            <label for="password" class="col-lg-8 offset-lg-2">
                Описание:
                <textarea class="form-control mt-2 " name="description" rows="5"></textarea>
            </label>
        </div>
        <button class="btn-success btn col-4 offset-4 mt-5">Създай</button>

    </form>

{% endblock %}