{% extends 'base.html.twig' %}

{% block body %}

    {% if not (app.user) or not (app.user.isAdmin) %}
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            Нямате достъп до това меню.
            {% if not app.user %}
                Моля, <a class="alert-link" href="{{ path('security_login') }}">влезте в акаунта си</a>.

            {% else %}
            Върнете се на главната страница <a class="alert-link" href="{{ path('homepage') }}">тук</a>.
            {% endif %}
        </div>

    {% else %}
    {{ form_start(form, {'attr':{'class':'mt-3 border-2 border-secondary pt-3 pb-3 rounded'}}) }}
    <h1 class="h1 mb-3 text-center">
        Добави продукт
    </h1>

    <div class="form-group row">
        <div class="col-lg-2 offset-lg-2 text-right">
        {{ form_label(form.name, null,
            {'label': 'Име на продукта:'}
        ) }}
        </div>
        <div class="col-lg-5">
        {{ form_widget(form.name,
            {'attr': {'class': 'form-control'}}
        )}}
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-2 offset-lg-2 text-right">
            {{ form_label(form.price, null,
                {'label': 'Цена:'}
            ) }}
        </div>
        <div class="col-lg-5">
            {{ form_widget(form.price,
                {'attr': {'class': 'form-control'}}
            )}}
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-2 offset-lg-2 text-right">
            {{ form_label(form.description, null,
                {'label': 'Описание:'}
            ) }}
        </div>
        <div class="col-lg-5">
            {{ form_widget(form.description,
                {'attr': {'class': 'form-control', 'rows': '4'}}
            )}}
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-2 offset-lg-2 text-right">
            {{ form_label(form.category, null,
                {'label': 'Категория:'}
            ) }}
        </div>
        <div class="col-lg-5">
            {{ form_widget(form.category,
                {'attr': {'class': 'form-control'}}
            )}}
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-2 offset-lg-2 text-right">
            {{ form_label(form.colors, null,
                {'label': 'Цветове:'}
            ) }}
        </div>
        <div class="col-lg-5">
            {{ form_widget(form.colors,
                {'attr': {'class': 'form-control'}}
            )}}
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-2 offset-lg-2 text-right">
            {{ form_label(form.sizes, null,
                {'label': 'Размери:'}
            ) }}
        </div>
        <div class="col-lg-5">
            {{ form_widget(form.sizes,
                {'attr': {'class': 'form-control'}}
            )}}
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-2 offset-lg-2 text-right">
            {{ form_label(form.image, null,
                {'label': 'Качи снимка:'}
            ) }}
        </div>
        <div class="col-lg-5">
            {{ form_widget(form.image,
                {'attr': {'class': 'form-control'}}
            )}}
        </div>

    </div>
    <div class="text-center">
    {{ form_row(form.save, {
        'label': 'Запази',
        'attr':{'class':'btn btn-outline-secondary btn-lg pr-5 pl-5'}
    }) }}
    </div>
    {{ form_end(form) }}

    {% endif %}

{% endblock %}