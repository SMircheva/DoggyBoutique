            {{ form_label(form.colors, null,
                {'label': 'Цветове:'}
            ) }}
        </div>
        <div class="col-lg-5">
            {{ form_widget(form.colors,
                {'attr': {'class': 'form-control'}}
            )}}
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-2 offset-lg-2 text-right">
            {{ form_label(form.image, null,
                {'label': 'Качи снимка:'}
            ) }}
        </div>
        <div class="col-lg-5">
            {{ form_widget(form.image,
                {'attr': {'class': 'form-control'}}
            )}}
        </div>

    </div>
    <div class="text-center">
    {{ form_row(form.save, {
        'label': 'Запази',
