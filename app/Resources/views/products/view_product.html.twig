{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="h1">{{ product.name }}</h1>
    <img class="mx-auto" src="{{ asset('uploads/images/' ~ product.image) }}" alt="" >
    <h3 class="h3">{{ product.description }}</h3>

    <div class="row">
        <div class="col-lg-6 col-sm-12">
            <p class="font-weight-bold">Изберете цвят:</p>

            {% for color in product.colors %}

                <div class="form-check form-check-inline">
                    <input type="radio" class="form-check-input" id="materialInline1" name="inlineMaterialRadiosExample">
                    <label class="form-check-label" for="materialInline1">{{ color }}</label>
                </div>
            {% endfor %}
        </div>
        <div class="col-lg-6 col-sm-12 mt-sm-4">
            <p class="font-weight-bold">Изберете размер:</p>

            {% for size in product.sizes %}

                <div class="form-check form-check-inline">
                    <input type="radio" class="form-check-input" id="materialInline1" name="inlineMaterialRadiosExample">
                    <label class="form-check-label" for="materialInline1">{{ size }}</label>
                </div>
            {% endfor %}
        </div>
    </div>


    <div class="row">
        <a id="add-to-cart" class="btn btn-outline-secondary mt-4" href="{{ path('add_to_cart', {'id':product.id}) }}">Добави в количката</a>

    </div>

{% endblock %}