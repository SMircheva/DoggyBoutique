{% extends 'base.html.twig' %}

{% block body %}
    <form action="{{ path('security_login') }}" method="post" class="text-white col-lg-6 offset-lg-3 bg-secondary mt-4 rounded p-4">
        <div class="form-group">
            <label for="email" class="col-lg-8 offset-lg-2">
                Email:
            <input type="email" class="form-control mt-2" name="email" placeholder="myemail@myhost.com">
            </label>
        </div>
        <div class="form-group">
            <label for="password" class="col-lg-8 offset-lg-2">
                Password:
                <input type="password" class="form-control mt-2" name="password">
            </label>
        </div>
        <button class="btn-success btn col-4 offset-4 mt-5">Login</button>
        <p>Нямате акант? Регистрирайте се <a href="{{ path('user_register') }}">тук</a></p>
    </form>

{% endblock %}
