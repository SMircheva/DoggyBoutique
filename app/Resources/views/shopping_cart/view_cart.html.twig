{% extends 'base.html.twig' %}

{% block body %}

    {% if cart_contents is empty %}
        <div class="alert alert-dismissible alert-secondary">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            Количката Ви е празна! Отидете в <a href="{{ path('homepage') }}" class="alert-link">магазина</a>, за да пазарувате!
        </div>
    {% else %}

    <table class="table table-hover">
        <thead>
        <tr>
            <th></th>
            <th>Продукт</th>
            <th>Цвят</th>
            <th>Размер</th>
            <th>Количество</th>
            <th>Единична цена</th>
            <th>Обща стоност</th>
        </tr>
        </thead>

        <tbody>

        {% for item in cart_contents %}
        <tr class="table-light">
            <td><img src="{{ asset('uploads/images/' ~ item.image) }}" alt="" class="pr-0 height-50"></td>
            <td>{{ item.product }}</td>
            <td>{{ item.color }}</td>
            <td>{{ item.size }}</td>
            <td>{{ item.quantity }}</td>
            <td>{{ item.price }}</td>
            <td>{{ (item.quantity * item.price) | number_format(2, '.', '') }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
        <a href="{{ path('order_details') }}" class="btn btn-outline-secondary">Поръчай</a>
    {% endif %}

{% endblock %}